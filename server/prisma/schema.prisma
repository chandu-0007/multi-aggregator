generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model user {
  id String  @id @default(uuid()) 
  FristName String 
  LastName String 
  username String @unique
  phone  Int @unique
  HashPassword String 
  CreatedAt DateTime @default(now())
  OTP  OTP?
}

model OTP{
  Userid   String @unique  
  otp      Int  
  user user @relation(fields: [Userid ] , references: [id])
  CreatedAt DateTime @default(now())
}